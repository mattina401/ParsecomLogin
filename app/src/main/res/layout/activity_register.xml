<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.parsecomlogin.RegisterActivity">



    <TextView
        android:id="@+id/txtregname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"/>

    <EditText
        android:id="@+id/regname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtregname"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/txtregpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/regname"
        android:text="Password"/>

    <EditText
        android:id="@+id/regpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtregpassword"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/regsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regpassword"
        android:text="Signup"
        />

    <Button
        android:id="@+id/regcancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regsignup"
        android:text="Cancel"
        />



</RelativeLayout>
